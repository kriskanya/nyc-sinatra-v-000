<table>
  <th>Figure Name:</th>
  <tr>
    <td><%= @figure.name %>
    <ul>
      Landmarks:
      <% @figure.landmarks.each do |landmark| %>
        <li><%= landmark.name %></li>
      <% end %>
    </ul>
    Titles:
    <ul>
      <% @figure.titles.each do |title| %>
        <li><%= title.name %></li>
      <% end %>
    </ul>
    </td>
  </tr>
</table>